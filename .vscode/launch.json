{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "request": "launch",
            "console": "internalConsole",
            "name": "T | Run jest",
            "type": "node",
            "program": "${workspaceRoot}/node_modules/jest/bin/jest",
            "stopOnEntry": false,
            "outputCapture": "std",
            "args": [
                "--verbose"
            ],
            "sourceMaps": true,
            "cwd": "${workspaceRoot}",
            "runtimeExecutable": null,
            "env": {
                "PORT": "4200",
                "DEBUG": "methodus:*",
                "NODE_ENV": "debug",
                "CACHE_RELOAD_ON_EXPIRE": "true",
                "CACHE_DELETE_ON_EXPIRE": "true"
            }
        },
        {
            "request": "launch",
            "console": "internalConsole",
            "name": "T | Run test",
            "type": "node",
            "program": "${workspaceRoot}/build/tests/throng.test.js",
            "stopOnEntry": false,
            "outputCapture": "console",
            "args": [],
            "sourceMaps": true,
            "cwd": "${workspaceRoot}",
            "runtimeExecutable": null,
            "env": {
                "PORT": "4200",
                "DEBUG": "methodus:throng:*",
                "NODE_ENV": "debug",
                "CACHE_RELOAD_ON_EXPIRE": "true",
                "CACHE_DELETE_ON_EXPIRE": "true"
            }
        },
    ]
}